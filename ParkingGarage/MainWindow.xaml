<Window x:Class="ParkingGarage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParkingGarage"
        mc:Ignorable="d"
        Title="Parking Garage" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="selector" HorizontalAlignment="Left" Margin="55,12,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0" SelectionChanged="ComboBox_SelectionChanged" AutomationProperties.Name="selector">
            <ListBoxItem Content="Parked Vehicles"/>
            <ListBoxItem Content="Available Parking Garage"/>
        </ComboBox>
        <DataGrid x:Name="ParkedGrid" HorizontalAlignment="Left" Height="368" Margin="10,41,0,0" VerticalAlignment="Top" Width="772"  AutomationProperties.Name="ParkedGrid"/>
        <Button Content="Park New Vehicle" HorizontalAlignment="Left" Margin="650,10,0,0" VerticalAlignment="Top" Width="132" RenderTransformOrigin="0.061,-0.184" Click="Button_Click"/>
        <Label Content="Filter" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-5.957,-0.101"/>

    </Grid>
</Window>
